<resources>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:textSize">11sp</item>
        <item name="buttonStyle">@style/AppButtons</item>
        <item name="android:textStyle">bold</item>
        <item name="android:actionBarStyle">@style/AppActionBar</item>
    </style>

    <style name="AppTheme.DialogStyle" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTitleBackgroundStyle">@style/dialog_window_title</item>
        <item name="android:windowTitleStyle">@style/dialog_window_title</item>
        <item name="android:windowNoTitle">false</item>
    </style>


    <style name="dialog_window_title" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:background">#3B4B9C</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#EFEDF6</item>
    </style>

    <style name="AppActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/action_bar_color</item>
        <item name="android:titleTextColor">#ffffff</item>
        <item name="android:subtitleTextColor">#ffffff</item>
        <item name="android:titleTextStyle">@style/AppTitleText</item>
        <item name="android:subtitleTextStyle">@style/AppSubtitleText</item>
        <item name="android:icon">@drawable/buzzcardmod</item>
        <item name="android:titleMargin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetLeft">5dp</item>
    </style>

    <style name="AppTitleText" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppSubtitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppButtons">
        <item name="android:background">#757178</item>
        <item name="android:layout_columnWeight">0.33</item>
        <item name="android:maxButtonHeight">10dp</item>
    </style>

</resources>
